<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Button Section -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="65dp"
            android:padding="16dp">

            <!-- User Information Section -->
            <TextView
                android:id="@+id/user_view_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="username"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_view_deviceID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="deviceID"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_view_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="email"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_view_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="phoneNumber"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_view_profilePictureUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="profilePictureUrl"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_view_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="location"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_view_dateJoined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="dateJoined"
                android:textSize="18sp" />

            <!-- Switches -->
            <Switch
                android:id="@+id/notificationAsk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications" />

            <Switch
                android:id="@+id/geolocationAsk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geolocation" />

            <Switch
                android:id="@+id/entrant_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrant" />

            <Switch
                android:id="@+id/organizer_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizer" />

            <Switch
                android:id="@+id/admin_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/buttonSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/delete_button_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/cancel_button_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
